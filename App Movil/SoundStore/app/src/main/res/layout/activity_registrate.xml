<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4E647B">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRATE"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            >


            <EditText
                android:id="@+id/campo_cedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Cedula"
                android:padding="15dp" />
            <EditText
                android:id="@+id/campo_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Nombres"
                android:padding="15dp" />
            <EditText
                android:id="@+id/campo_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Apellidos"
                android:padding="15dp" />

            <EditText
                android:id="@+id/campo_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Email"
                android:padding="15dp" />
            <EditText
                android:id="@+id/campo_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Dirección"
                android:padding="15dp" />

            <EditText
                android:id="@+id/campo_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Télefono"
                android:padding="15dp" />

            <EditText
                android:id="@+id/campo_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="15dp" />

            <Button

                android:id="@+id/btn_registrar"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:backgroundTint="#0C0C0C"
                android:text="REGISTRAR"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:onClick="registrarUsuario"/>
        </LinearLayout>
</LinearLayout>
